<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inner_frame_layout_padding"
            android:background="@color/white"
            android:backgroundTint="#cad7d1"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_date_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Date: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/txt_date_history"
                android:fontFamily="@font/bold_roboto"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_time_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateHistory"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Time: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateHistory"
                android:layout_toEndOf="@+id/txt_time_history"
                android:fontFamily="@font/bold_roboto"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_vaccine_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeHistory"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Vaccine: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vaccineHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeHistory"
                android:layout_toEndOf="@+id/txt_vaccine_history"
                android:fontFamily="@font/bold_roboto"
                android:text="Vaccine"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_dose_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccineHistory"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Status: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/statusHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccineHistory"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/txt_dose_history"
                android:fontFamily="@font/bold_roboto"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_dose_history"
                android:layout_marginTop="0dp"
                android:text="Feedback"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>