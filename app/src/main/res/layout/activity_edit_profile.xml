<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_bg"
    tools:context=".EditProfile">

    <ImageView
        android:id="@+id/imgEditProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124"
        tools:srcCompat="@drawable/ic_baseline_add_circle_24" />

    <TextView
        android:id="@+id/txtViewProfilesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="CLIENT'S NAME PROFILE"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imgEditProfile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgEditProfile"
        app:layout_constraintTop_toBottomOf="@+id/imgEditProfile" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#AAE09E"
        android:text="ChangePassword"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/txtViewProfilesName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtViewProfilesName"
        app:layout_constraintTop_toBottomOf="@+id/txtViewProfilesName" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#AAE09E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/changepass"
        app:layout_constraintStart_toStartOf="@+id/changepass"
        app:layout_constraintTop_toBottomOf="@+id/changepass"
        app:layout_constraintVertical_bias="0.366"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
</androidx.constraintlayout.widget.ConstraintLayout>