<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave_1_bg"
    tools:context=".activities.AppointmentConfirmationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:paddingTop="20dp"
            android:text="VACCINATION APPOINTMENT"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardYourAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="#cad7d1"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/inner_frame_layout_padding"
                android:background="#cad7d1"
                android:backgroundTint="#cad7d1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_date_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Date: "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/txt_date_appointment"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_time_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateAppointment"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Time: "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/timeAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateAppointment"
                    android:layout_toEndOf="@+id/txt_time_appointment"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Time"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_vaccine_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeAppointment"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Vaccine: "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/vaccineAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timeAppointment"
                    android:layout_toEndOf="@+id/txt_vaccine_appointment"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Vaccine"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_dose_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccineAppointment"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Dose: "
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/statusAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vaccineAppointment"
                    android:layout_toEndOf="@+id/txt_dose_appointment"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Dose"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_place_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statusAppointment"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Place: "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/placeAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/statusAppointment"
                    android:layout_toEndOf="@+id/txt_dose_appointment"
                    android:fontFamily="@font/bold_roboto"
                    android:text="Place"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnConfirmVac"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="#F3F5F8"
            android:fontFamily="@font/bold_roboto"
            android:text="Confirm"
            android:textColor="#000000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>