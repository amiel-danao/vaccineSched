<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardYourAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/inner_frame_layout_padding"
            android:background="@color/white"
            android:backgroundTint="#cad7d1"
            android:padding="10dp">


            <TextView
                android:id="@+id/txt_dateAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Date: "
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/dateAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/txt_dateAppointment"
                android:fontFamily="@font/bold_roboto"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_timeAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateAppointment"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Time: "
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/timeAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateAppointment"
                android:layout_toEndOf="@+id/text_timeAppointment"
                android:fontFamily="@font/bold_roboto"
                android:text="Time"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txt_vaccineAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeAppointment"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Vaccine: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vaccineAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeAppointment"
                android:layout_toEndOf="@+id/txt_vaccineAppointment"
                android:fontFamily="@font/bold_roboto"
                android:text="Vaccine"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_statusAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccineAppointment"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Status: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/statusAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vaccineAppointment"
                android:layout_toEndOf="@+id/txt_statusAppointment"
                android:fontFamily="@font/bold_roboto"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_PlaceAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusAppointment"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold_roboto"
                android:text="Place: "
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/PlaceAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusAppointment"
                android:layout_toEndOf="@+id/txt_PlaceAppointment"
                android:fontFamily="@font/bold_roboto"
                android:text="Place"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>